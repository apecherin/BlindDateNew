= form_for @message do |f|
  - if @message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@message.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @message.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :message
    = f.text_field :message
  .field
    = f.label :user_to
    = f.text_field :user_to, :value => "#{current_user.id}"
  .field
    = f.label :user_from
    = f.text_field :user_from, :value => "#{current_user.id}"
  .actions
    = f.submit 'Save'
