.bs-docs-section
  .row
    .col-lg-12
      .well
        .row
          .col-md-3
            = image_tag @user.avatar.url(:medium)
          .col-md-9
            .row
              .col-md-3
                %h2 #{@user.nickname}
                %h3
                  %a{'href' => "/messages/#{@user.id}", :class => "btn btn-warning btn-xs"}
                    написать
                %h3
                  %a{'href' => "/messages/#{@user.id}", :class => "btn btn-warning btn-xs"}
                    встретиться
              .col-md-3
                %h4 Пол:
                %h3 #{@user.sex}
                %br/
                %h4 Возраст:
                %h3 #{@user.age}
              .col-md-4
                %h5 О себе:
                #{@user.description}
