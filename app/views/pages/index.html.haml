.bs-docs-section
  .row
    .col-lg-12
      .well
        .row
          .col-md-3
            = image_tag current_user.avatar.url(:medium)
          .col-md-9
            .row
              .col-md-3
                %h2 #{current_user.nickname}
                %h3
                  = link_to "Почта", messages_path, :class => "btn btn-warning btn-xs", :id => "messages_link_main"
                %h3
                  = link_to "Встречи", messages_path, :class => "btn btn-warning btn-xs", :id => "messages_link_main"
              .col-md-3
                %h4 Пол:
                %h3 #{current_user.sex == 0 ? "мужской" : "женский"}
                %br
                %h4 Возраст:
                %h3 #{current_user.age}
              .col-md-4
                %h5 О себе:
                #{current_user.description}
              .col-md-2
                = link_to "Редактировать", edit_user_registration_path, :class => "btn btn-primary btn-xs"
