<div class="bs-docs-section">
  <div class="row">
    <div class="col-lg-offset-3 col-lg-6">
      <div class="well">
        <h2>Регистрация</h2>

        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-horizontal", :role => "form", :multipart => true}) do |f| %>
          <%= devise_error_messages! %>
          <div class="form-group">
            <label for="inputEmail1" class="col-lg-2 control-label"><%= f.label :email %></label>
            <div class="col-lg-10">
              <%= f.email_field :email, :autofocus => true, :type => "email", :class => "form-control", :id => "inputEmail1", :placeholder => "Ваш адрес электронной почты"%>
            </div>
          </div>

          <div class="form-group">
            <label for="inputText" class="col-lg-2 control-label"><%= f.label :nickname %></label>
            <div class="col-lg-10">
              <%= f.text_field :nickname, :type => "text", :class => "form-control", :placeholder => "Ваше имя на сайте"%>
            </div>
          </div>

          <div class="form-group">
            <label for="exampleInputFile" class="col-lg-2 control-label">File input</label>
            <div class="col-lg-10">
              <%= f.text_field :avatar, :type => "file", :class => "form-control", :id => "exampleInputFile", :placeholder => "Ваше имя на сайте"%>
            </div>
            <p class="help-block">Example block-level help text here.</p>
          </div>

          <div class="form-group">
            <label for="inputPassword1" class="col-lg-2 control-label"><%= f.label :password %></label>
            <div class="col-lg-10">
              <%= f.password_field :password, :type => "password", :class => "form-control", :id => "inputPassword1", :placeholder => "Ваш пароль"%>
            </div>
          </div>

          <div class="form-group">
            <label for="inputPassword1" class="col-lg-2 control-label"><%= f.label :password_confirmation %></label>
            <div class="col-lg-10">
              <%= f.password_field :password_confirmation, :type => "password", :class => "form-control", :id => "inputPassword1", :placeholder => "Потвердите ваш пароль"%>
            </div>
          </div>

          <div class="form-group">
            <div class="col-lg-offset-9 col-lg-10">
              <div><%= f.submit "Регистрация", :class => "btn btn-primary" %></div>
            </div>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>