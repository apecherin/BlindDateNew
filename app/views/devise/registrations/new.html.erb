<div class="bs-docs-section">
  <div class="row">
    <div class="col-lg-offset-3 col-lg-6">
      <div class="well">
        <h2>Регистрация</h2>

        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:autocomplete => :off, :class => "form-horizontal", :role => "form", :multipart => true}) do |f| %>
          <%= devise_error_messages! %>

        <div class="form-group">
          <label for="inputText" class="col-lg-2 control-label">Имя</label>
          <div class="col-lg-8">
            <%= f.text_field :nickname, :autofocus => true, :type => "text", :class => "form-control", :placeholder => "Ваше имя"%>
          </div>
        </div>

          <div class="form-group">
            <label for="inputEmail1" class="col-lg-2 control-label"><%= f.label :email %></label>
            <div class="col-lg-8">
              <%= f.email_field :email, :type => "email", :class => "form-control", :id => "inputEmail1", :placeholder => "Ваш адрес электронной почты"%>
            </div>
          </div>

          <div class="form-group">
            <label class="col-lg-2 control-label">Возраст</label>
            <div class="col-lg-2">
              <%= f.text_field :age, :placeholder => "Полных лет", :class=>"form-control", :autocomplete => :off, value: ''%>
            </div>
          </div>

          <div class="form-group">
            <label class="col-lg-2 control-label">Ваш пол</label>
            <div class="col-lg-8">
              <div class="radio">
                <label>
                  <%= f.radio_button :sex, 1, :html =>{:type=>"radio", :name=>"optionsRadios", :id=>"optionsRadios1"} %>
                  женский
                </label>
              </div>
              <div class="radio">
                <label>
                  <%= f.radio_button :sex, 0, :html =>{:type=>"radio", :name=>"optionsRadios", :id=>"optionsRadios2"} %>
                  мужской
                </label>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="inputPassword1" class="col-lg-2 control-label">Пароль</label>
            <div class="col-lg-8">
              <%= f.password_field :password, :type => "password", :class => "form-control", :id => "inputPassword1", :placeholder => "Ваш пароль"%>
            </div>
          </div>

          <div class="form-group">
            <label for="inputPassword1" class="col-lg-2 control-label">Повтор пароля</label>
            <div class="col-lg-8">
              <%= f.password_field :password_confirmation, :type => "password", :class => "form-control", :id => "inputPassword1", :placeholder => "Потвердите ваш пароль"%>
            </div>
          </div>

          <div class="form-group">
            <div class="col-lg-offset-9 col-lg-10">
              <div><%= f.submit "Регистрация", :class => "btn btn-success" %></div>
            </div>
          </div>
        <% end %>

        <%= link_to "Вход", new_session_path(resource_name), :class => "btn btn-primary" %><br /><br />
      </div>
    </div>
  </div>
</div>